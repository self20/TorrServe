<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/ic_header"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:id="@+id/mainMenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <View
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="166dp"
            android:layout_weight="1" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonAdd"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonRemoveAll"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remove_all"
            android:drawableLeft="@drawable/ic_trash_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonPlaylist"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/playlist"
            android:drawableLeft="@drawable/ic_list_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonDonate"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/donate"
            android:drawableLeft="@drawable/ic_donate_black"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonClearCache"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/clear_cache"
            android:drawableLeft="@drawable/ic_clean_cache_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonSearch"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonSettings"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:drawableLeft="@drawable/ic_settings_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />

        <Button
            android:textSize="24sp"
            android:id="@+id/buttonExit"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exit"
            android:drawableLeft="@drawable/ic_cancel_black_24dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewStatus"
            android:text="@string/starting_server"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:paddingTop="12dp"
            android:listSelector="?android:attr/selectableItemBackground"
            android:id="@+id/listViewTorrent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>